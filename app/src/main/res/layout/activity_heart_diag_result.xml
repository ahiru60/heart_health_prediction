<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartDiagResultActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-25dp">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/formResultBackFloatingActionButton"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:clickable="true"
        android:contentDescription="back"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0sp"
        android:background="@color/cool_purple"
        android:fontFamily="sans-serif-condensed-medium"
        android:letterSpacing="0.05"
        android:paddingLeft="15sp"
        android:paddingTop="380sp"
        android:paddingRight="15sp"
        android:paddingBottom="35sp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold">

    </TextView>
    <ImageView
        android:id="@+id/ResultImage"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="50sp"
        android:src="@drawable/baseline_health_and_safety_24">

    </ImageView>
</FrameLayout>





        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="45sp"
            android:text="@string/prediction_prompt"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>